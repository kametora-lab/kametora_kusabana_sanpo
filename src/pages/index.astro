---
import Layout from '../layouts/Layout.astro';
import { NeonButton } from '../components/NeonButton';
import plants from '../data/plants.json';

const featuredPlants = plants.slice(0, 9);
---

<Layout title="Home">
	<main class="min-h-screen flex flex-col items-center justify-center p-4 relative overflow-hidden">
		
		{/* Hero Section */}
		<section class="text-center z-10 max-w-4xl mx-auto space-y-8 mb-20">
			<h1 class="font-display text-transparent bg-clip-text bg-gradient-to-r from-neon-pink via-neon-purple to-neon-cyan text-6xl md:text-8xl font-black tracking-tighter drop-shadow-[0_0_20px_rgba(255,45,149,0.5)] animate-pulse-slow">
				FLOWER<br/>ALBUM
			</h1>
			<p class="text-gray-300 text-lg md:text-xl font-light tracking-wide max-w-2xl mx-auto">
				Digital Botanical Database <span class="text-neon-cyan">///</span> ver.2025
			</p>
			
			<div class="flex flex-wrap gap-4 justify-center pt-8">
				<a href="/amamikusabana_2/plants">
					<NeonButton client:load variant="primary">Explore Database</NeonButton>
				</a>
				<button 
					onClick={() => {
						const randomPlant = plants[Math.floor(Math.random() * plants.length)];
						window.location.href = `/amamikusabana_2/plants/${randomPlant.slug}`;
					}}
					class="neon-button-secondary"
				>
					<NeonButton client:load variant="secondary">Random Discovery</NeonButton>
				</button>
			</div>
		</section>

		{/* Featured Cards */}
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full max-w-6xl px-4 z-10">
			{featuredPlants.map((plant) => (
				<a href={`/amamikusabana_2/plants/${plant.slug}`} class="block glass-panel p-4 group hover:border-neon-cyan/50 hover:bg-white/5 transition-all duration-300">
					<div class="aspect-square bg-black/50 rounded-lg mb-4 overflow-hidden relative">
						<div class="absolute inset-0 bg-gradient-to-tr from-neon-pink/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
						{plant.images?.[0] ? (
							<img 
								src={plant.images[0]} 
								alt={plant.title}
								class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
							/>
						) : (
							<div class="w-full h-full flex items-center justify-center text-gray-700 font-mono text-xs">
								IMG: {plant.slug}
							</div>
						)}
					</div>
					<h3 class="font-display text-xl text-white mb-1 group-hover:text-neon-cyan transition-colors">{plant.title}</h3>
					<p class="text-gray-400 text-sm line-clamp-2">{plant.description}</p>
				</a>
			))}
		</div>

		{/* Decorative Elements */}
		<div class="absolute top-1/4 -left-20 w-96 h-96 bg-neon-purple/20 rounded-full blur-3xl pointer-events-none"></div>
		<div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-neon-cyan/20 rounded-full blur-3xl pointer-events-none"></div>

	</main>
</Layout>
