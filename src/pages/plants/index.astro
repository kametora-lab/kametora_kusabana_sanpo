---
import Layout from '../../layouts/Layout.astro';
import { PlantList } from '../../components/PlantList';
import plants from '../../data/plants.json';
import colors from '../../data/colors.json';
---

<Layout title="Database" description="Search and filter the complete collection of digital flora.">
  <main class="min-h-screen p-4 md:p-8 pt-20 max-w-7xl mx-auto">
    
    <div class="mb-12 flex flex-col md:flex-row justify-between items-start md:items-center gap-4 border-b border-white/10 pb-8">
      <div>
        <a href="/amamikusabana_2" class="text-neon-cyan hover:text-white transition-colors flex items-center gap-2 group mb-2">
          <span class="group-hover:-translate-x-1 transition-transform">‚Üê</span> Back to Home
        </a>
        <h1 class="font-display text-4xl md:text-5xl font-black text-white text-glow">
          FLORA DATABASE
        </h1>
      </div>
      <p class="text-gray-400 font-mono text-xs max-w-xs text-right">
        ACCESS GRANTED. INDEXING {plants.length} ENTITIES.
      </p>
    </div>

    <PlantList client:load initialPlants={plants} colors={colors} />

  </main>
</Layout>
